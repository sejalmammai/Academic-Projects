package zigZagCipher;

public class ZigZagCipher {

	public static void main(String[] args) {
		
		System.out.println(zigzagCipher("APPLE", 2));

	}
	
    public static String zigzagCipher(String message, int rails) {
    	
        if (rails <= 1) {
            return message;
        }

        String[] railMessages = new String[rails];
        
        for (int i = 0; i < rails; i++) {
            railMessages[i] = "";
        }

        int currentRail = 0;
        boolean goingDown = true;

        for (int i = 0; i < message.length(); i++) {
        	
            char letter = message.charAt(i);
            railMessages[currentRail] += letter; 

            if (goingDown == true) {
                currentRail++;
                
                if (currentRail == rails - 1) {
                    goingDown = false;
                }
                
            } 
            
            else {
                currentRail--;
                if (currentRail == 0) {
                    goingDown = true;
                }
            }
            
        }

        String encryptedMessage = "";
        
        for (String rail : railMessages) {
            encryptedMessage += rail;
        }

        return encryptedMessage;
        
    }
	
}
	
	


